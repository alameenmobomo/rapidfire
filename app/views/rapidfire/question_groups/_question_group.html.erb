  <div class="row">
    <div class="col-md-12">
      <h4>
        <%= can_administer? ? link_to(question_group.name, question_group_questions_path(question_group)) : question_group.name %>
      </h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-8">
